# =============================================================================
# FastAPI Template - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.
# NEVER commit the .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment: local, staging, production
ENVIRONMENT=local

# Project name (shown in OpenAPI docs)
PROJECT_NAME="FastAPI Template Project"

# Stack name for deployment
STACK_NAME=fastapi-template-project

# Domain for production (used by Traefik for TLS certificates)
DOMAIN=localhost

# Frontend host URL (used for CORS and email links)
FRONTEND_HOST=http://localhost:5173

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# Secret key for JWT token signing
# IMPORTANT: Generate a secure random key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=changethis

# First superuser credentials (created on initial startup)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Allowed CORS origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------

POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Set to true to enable SQL query logging (useful for debugging)
DB_ECHO=false

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------

# SMTP server settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false

# Sender email address
EMAILS_FROM_EMAIL=noreply@example.com

# Password reset token expiration (hours)
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking (leave empty to disable)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Docker (for deployment)
# -----------------------------------------------------------------------------

DOCKER_IMAGE_BACKEND=backend
